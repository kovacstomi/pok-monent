{
  "name": "pokemonent",
  "version": "1.0.0",
  "description": "Display a random Pokémon using pokéAPI",
  "author": "Tamás Kovács",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kovacstomi/pokemonent"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "keywords": [
    "react",
    "reactjs",
    "react-component",
    "pokémon",
    "pokéAPI"
  ],
  "scripts": {
    "start": "react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build": "rm -rf dist/* && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && ./fix-package-types.sh"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.14",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/react-test-renderer": "^18.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "react-test-renderer": "^18.2.0",
    "typescript": "^4.8.2"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}
